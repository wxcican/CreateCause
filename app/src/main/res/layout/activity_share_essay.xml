<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorBackround"    android:orientation="vertical"    tools:context="com.mzth.createcause.view.fragment.user.money.income.impl.ShareEssayActivity">    <View style="@style/ViewTitle" />    <include layout="@layout/base_title" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:padding="10dp"            android:text="共分享: "            android:textColor="@color/colorInCome"            android:textSize="15sp" />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="1500篇"            android:textColor="@color/colorMain"            android:textSize="15sp" />    </LinearLayout>    <android.support.v7.widget.RecyclerView        android:id="@+id/rv_user_share_essay"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="@color/colorBackround"        android:paddingLeft="10dp"        android:paddingRight="10dp" /></LinearLayout>