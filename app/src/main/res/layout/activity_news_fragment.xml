<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorBackround"    android:orientation="vertical">    <View style="@style/ViewTitle" />    <include layout="@layout/base_title" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <android.support.design.widget.TabLayout            android:id="@+id/news_tl"            android:layout_width="0dp"            android:layout_height="40dp"            android:layout_weight="1"            app:tabIndicatorColor="#00000000"            app:tabIndicatorHeight="0dp"            app:tabMode="scrollable"            app:tabPadding="5dp"            app:tabSelectedTextColor="@color/colorMain"            app:tabTextColor="@color/colorHint" />        <LinearLayout            android:id="@+id/ll_news"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:gravity="center_vertical"            android:orientation="horizontal"            android:paddingLeft="10dp"            android:paddingRight="10dp">            <ImageView                android:layout_width="14dp"                android:layout_height="8dp"                android:background="@drawable/down_icon" />        </LinearLayout>    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <android.support.v4.view.ViewPager        android:id="@+id/vp_news"        android:layout_width="match_parent"        android:layout_height="match_parent" /></LinearLayout>