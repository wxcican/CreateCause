<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorWhite"    android:orientation="vertical"    tools:context="com.mzth.createcause.view.fragment.user.commerce.CommerceInfoActicity">    <View style="@style/ViewTitle" />    <include layout="@layout/base_title" />    <TextView        android:textStyle="bold"        android:id="@+id/tv_commerce_info_1"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center"        android:padding="15dp"        android:textColor="#323232"        android:textSize="17sp" />    <View style="@style/ViewDivHorizontal" />    <TextView        android:id="@+id/tv_commerce_info_2"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="left"        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:textColor="#5f5f5f"        android:textSize="15sp" /></LinearLayout>