<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorBackround"    android:orientation="vertical">    <TextView        android:id="@+id/tv_item_news_info_title_1"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:padding="10dp"        android:text="介：《君临》是开荒所著，首发于起点中文网，现已完结。本书讲述的是此刀当碎虚空界，此剑当开造化权！血戮尘寰世无双，傲视三界笑红尘！是网络写手开荒创作的修真类奇幻修真"        android:textColor="#323232"        android:textSize="16sp" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal"        android:padding="10dp">        <LinearLayout            android:id="@+id/ll_item_news_info_userinfo"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="horizontal">            <com.mzth.createcause.base.custom.RadiusUserImageView                android:id="@+id/iv_item_news_info_title_1"                android:layout_width="30dp"                android:layout_height="30dp"                android:scaleType="fitXY"                android:src="@mipmap/j02" />            <TextView                android:id="@+id/tv_item_news_info_title_2"                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:gravity="center_vertical"                android:paddingLeft="10dp"                android:text="教育网"                android:textColor="#7a7a7a" />        </LinearLayout>        <TextView            android:id="@+id/tv_item_news_info_title_3"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:gravity="center_vertical"            android:paddingLeft="20dp"            android:text="1小时前  10条评论"            android:textColor="#bdbdbd"            android:textSize="12sp" />    </LinearLayout>    <TextView        android:gravity="center"        android:textColor="#454545"        android:textSize="14sp"        android:id="@+id/tv_item_news_info_title_content"        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:background="@color/colorWhite"        android:layout_width="match_parent"        android:layout_height="wrap_content" />    <View style="@style/ViewDivHorizontal" />    <Space        android:layout_width="match_parent"        android:layout_height="5dp" /></LinearLayout>