<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="#00000000"    android:orientation="vertical">    <TextView        android:id="@+id/tv_item_show_picture_1"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@drawable/show_pictrue_title"        android:gravity="center_horizontal"        android:paddingBottom="8dp"        android:paddingTop="8dp"        android:text="拍照"        android:textColor="@color/colorBlcak"        android:textSize="16sp" />    <View style="@style/ViewDivHorizontal" />    <TextView        android:id="@+id/tv_item_show_picture_2"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@drawable/show_pictrue_bottom"        android:gravity="center_horizontal"        android:paddingBottom="8dp"        android:paddingTop="8dp"        android:text="相册选择"        android:textColor="@color/colorBlcak"        android:textSize="16sp" />    <Space        android:layout_width="match_parent"        android:layout_height="10dp" />    <TextView        android:id="@+id/tv_item_show_picture_3"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="10dp"        android:background="@drawable/show_bt_6dp"        android:gravity="center_horizontal"        android:paddingBottom="8dp"        android:paddingTop="8dp"        android:text="取消"        android:textColor="@color/colorBlcak"        android:textSize="16sp" /></LinearLayout>