<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorBackround"    android:orientation="vertical"    tools:context="com.mzth.createcause.view.fragment.user.info.impl.BindAccountNumberActivity">    <View style="@style/ViewTitle" />    <include layout="@layout/base_title" />    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingBottom="8dp"        android:paddingLeft="10dp"        android:paddingTop="8dp"        android:text="请绑定本人支付宝账号"        android:textColor="#999999"        android:textSize="14sp" />    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:padding="10dp"            android:text="姓名"            android:textSize="15sp" />        <EditText            android:id="@+id/et_user_info_bing_zfb_1"            android:inputType="textVisiblePassword"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="@null"            android:hint="请输入姓名"            android:textSize="14sp" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:padding="10dp"            android:text="账号"            android:textSize="15sp" />        <EditText            android:id="@+id/et_user_info_bing_zfb_2"            android:inputType="textVisiblePassword"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="@null"            android:hint="请输入支付宝账号"            android:textSize="14sp" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <TextView        android:id="@+id/btn_user_info_bing_zfb"        style="@style/ViewButton"        android:layout_marginTop="40dp"        android:text="提交" /></LinearLayout>