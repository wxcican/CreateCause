<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    app:cardBackgroundColor="@color/colorWhite"    app:cardCornerRadius="2dp">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:padding="10dp">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="2017年"            android:textColor="@color/colorInCome"            android:textSize="15sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="2100元"            android:textColor="@color/colorMain"            android:textSize="15sp" />    </LinearLayout></android.support.v7.widget.CardView>