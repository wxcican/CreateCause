<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/cv_release_edit_3"    android:layout_width="match_parent"    android:layout_height="wrap_content"android:layout_margin="5dp"    app:cardBackgroundColor="@color/colorWhite"    app:cardCornerRadius="6dp"    app:contentPadding="-2dp">    <LinearLayout        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <ImageView            android:id="@+id/iv_release_edit_img"            android:layout_margin="10dp"            android:layout_width="0dp"            android:layout_weight="1"            android:layout_height="250dp" />        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:orientation="vertical">            <LinearLayout                android:id="@+id/ll_item_user_release_pic_del"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@color/colorBackround"                android:orientation="horizontal"                android:padding="8dp">                <ImageView                    android:layout_width="15dp"                    android:layout_height="24dp"                    android:src="@drawable/article_del_icon" />            </LinearLayout>            <LinearLayout                android:id="@+id/ll_item_user_release_picture_dow"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="1dp"                android:background="@color/colorBackround"                android:orientation="horizontal"                android:padding="8dp">                <ImageView                    android:layout_width="15dp"                    android:layout_height="24dp"                    android:src="@drawable/article_move_icon" />            </LinearLayout>            <LinearLayout                android:id="@+id/ll_item_user_release_picture_up"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="1dp"                android:background="@color/colorBackround"                android:orientation="horizontal"                android:padding="8dp">                <ImageView                    android:layout_width="15dp"                    android:layout_height="24dp"                    android:src="@drawable/up_move_icon" />            </LinearLayout>        </LinearLayout>    </LinearLayout></android.support.v7.widget.CardView>