<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorBackround"    android:orientation="vertical"    tools:context="com.mzth.createcause.view.fragment.user.money.impl.PayMentTypeActivity">    <View style="@style/ViewTitle" />    <include layout="@layout/base_title" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:padding="10dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="需支付: "            android:textColor="@color/colorInCome"            android:textSize="15sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="3000元"            android:textColor="@color/colorMain"            android:textSize="15sp" />    </LinearLayout>    <android.support.v7.widget.RecyclerView        android:id="@+id/rv_user_payment_type"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorBackround" />    <TextView        style="@style/ViewButton"        android:layout_marginTop="40dp"        android:text="立即支付" /></LinearLayout>