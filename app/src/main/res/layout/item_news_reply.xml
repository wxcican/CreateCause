<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorBackround"    android:orientation="horizontal">    <View        android:background="@color/colorWhite"        android:layout_width="50dp"        android:layout_height="match_parent"/>    <TextView        android:maxLines="1"        android:gravity="right"        android:paddingLeft="5dp"        android:paddingTop="5dp"        android:paddingBottom="5dp"        android:id="@+id/tv_item_news_info_reply_name"        android:layout_width="0dp"        android:layout_weight="1"        android:layout_height="wrap_content"        android:textColor="#b7b7b7"        android:textSize="14sp" />    <TextView        android:gravity="center"        android:textSize="14sp"        android:textColor="#333333"        android:text="回复:"        android:padding="5dp"        android:layout_width="wrap_content"        android:layout_height="wrap_content" />    <TextView        android:paddingRight="10dp"        android:paddingTop="5dp"        android:paddingBottom="5dp"        android:id="@+id/tv_item_news_info_reply_content"        android:layout_width="0dp"        android:layout_weight="3"        android:layout_height="wrap_content"        android:textColor="#333333"        android:textSize="14sp" /></LinearLayout>