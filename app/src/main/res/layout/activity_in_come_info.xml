<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context=".view.fragment.user.money.income.impl.InComeInfoActivity">    <View style="@style/ViewTitle" />    <include layout="@layout/base_title" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:padding="10dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="当前总贡献点:   "            android:textColor="@color/colorHandler"            android:textSize="13sp" />        <TextView            android:id="@+id/tv_in_come_info_1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="*"            android:textColor="@color/colorMain"            android:textSize="13sp" />    </LinearLayout>    <android.support.v7.widget.RecyclerView        android:id="@+id/rv_user_income"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="@color/colorBackround"        android:paddingLeft="10dp"        android:paddingRight="10dp" /></LinearLayout>