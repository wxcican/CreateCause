<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/cv_release_edit_2"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="5dp"    app:cardBackgroundColor="@color/colorWhite"    app:cardCornerRadius="6dp"    app:contentPadding="-2dp">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <EditText            android:id="@+id/et_item_user_release_edit_text"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginRight="31dp"            android:background="@null"            android:gravity="top"            android:hint="输入文字"            android:lines="10"            android:padding="10dp"            android:textSize="14sp"            android:typeface="monospace" />        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:orientation="vertical">            <LinearLayout                android:id="@+id/ll_item_user_release_text_del"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@color/colorBackround"                android:orientation="horizontal"                android:padding="8dp">                <ImageView                    android:layout_width="15dp"                    android:layout_height="24dp"                    android:src="@drawable/article_del_icon" />            </LinearLayout>            <LinearLayout                android:id="@+id/ll_item_user_release_text_dow"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="1dp"                android:background="@color/colorBackround"                android:orientation="horizontal"                android:padding="8dp">                <ImageView                    android:layout_width="15dp"                    android:layout_height="24dp"                    android:src="@drawable/article_move_icon" />            </LinearLayout>            <LinearLayout                android:id="@+id/ll_item_user_release_text_up"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="1dp"                android:background="@color/colorBackround"                android:orientation="horizontal"                android:padding="8dp">                <ImageView                    android:layout_width="15dp"                    android:layout_height="24dp"                    android:src="@drawable/up_move_icon" />            </LinearLayout>        </LinearLayout>    </RelativeLayout></android.support.v7.widget.CardView>