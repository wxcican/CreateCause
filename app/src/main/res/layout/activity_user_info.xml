<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorBackround"    android:orientation="vertical"    tools:context="com.mzth.createcause.view.fragment.user.info.impl.UserInfoActivity">    <View style="@style/ViewTitle" />    <include layout="@layout/base_title" />    <LinearLayout        android:id="@+id/ll_user_info_1"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <TextView            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center_vertical"            android:paddingLeft="10dp"            android:text="头像"            android:textColor="@color/colorHandler"            android:textSize="16sp" />        <com.mzth.createcause.base.custom.RadiusUserImageView            android:id="@+id/iv_user_info"            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_marginBottom="5dp"            android:layout_marginTop="5dp"/>        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginRight="10dp"            android:background="@drawable/icon_more" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:id="@+id/ll_user_info_2"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:gravity="center_vertical"            android:padding="10dp"            android:text="姓名"            android:textColor="@color/colorHandler"            android:textSize="16sp" />        <TextView            android:id="@+id/tv_user_info_1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:textColor="@color/colorBody"            android:textSize="14sp" />        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginRight="10dp"            android:background="@drawable/icon_more" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:id="@+id/ll_user_info_3"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:gravity="center_vertical"            android:padding="10dp"            android:text="手机号"            android:textColor="@color/colorHandler"            android:textSize="16sp" />        <TextView            android:id="@+id/tv_user_info_2"            android:maxLength="11"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:textColor="@color/colorBody"            android:textSize="14sp" />        <ImageView            android:visibility="invisible"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginRight="10dp"            android:background="@drawable/icon_more" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:id="@+id/ll_user_info_4"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:gravity="center_vertical"            android:padding="10dp"            android:text="提现账号"            android:textColor="@color/colorHandler"            android:textSize="16sp" />        <TextView            android:id="@+id/tv_user_info_3"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:textColor="@color/colorBody"            android:textSize="14sp" />        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginRight="10dp"            android:background="@drawable/icon_more" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:id="@+id/ll_user_info_5"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:gravity="center_vertical"            android:padding="10dp"            android:text="所在城市"            android:textColor="@color/colorHandler"            android:textSize="16sp" />        <TextView            android:id="@+id/tv_user_info_4"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:textColor="@color/colorBody"            android:textSize="14sp" />        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginRight="10dp"            android:background="@drawable/icon_more" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:id="@+id/ll_user_info_6"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:gravity="center_vertical"            android:padding="10dp"            android:text="修改密码"            android:textColor="@color/colorHandler"            android:textSize="16sp" />        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical"            android:layout_marginRight="10dp"            android:background="@drawable/icon_more" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" /></LinearLayout>