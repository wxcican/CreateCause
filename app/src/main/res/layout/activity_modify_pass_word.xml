<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorBackround"    android:orientation="vertical"    tools:context="com.mzth.createcause.view.fragment.user.info.impl.ModifyPassWordActivity">    <View style="@style/ViewTitle" />    <include layout="@layout/base_title" />    <View        style="@style/ViewDivHorizontal"        android:layout_marginTop="10dp" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <ImageView            android:layout_width="25dp"            android:layout_height="25dp"            android:layout_margin="10dp"            android:background="@drawable/o_pass" />        <EditText            android:id="@+id/et_modify_pwd_1"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="@null"            android:ellipsize="end"            android:hint="请输入旧密码"            android:inputType="textPassword"            android:lines="1"            android:textSize="14sp" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <ImageView            android:layout_width="25dp"            android:layout_height="25dp"            android:layout_margin="10dp"            android:background="@drawable/n_pass" />        <EditText            android:id="@+id/et_modify_pwd_2"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="@null"            android:ellipsize="end"            android:hint="请输入新密码"            android:inputType="textPassword"            android:lines="1"            android:textSize="14sp" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <ImageView            android:layout_width="25dp"            android:layout_height="25dp"            android:layout_margin="10dp"            android:background="@drawable/n_pass" />        <EditText            android:id="@+id/et_modify_pwd_3"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="@null"            android:ellipsize="end"            android:hint="请确认新密码"            android:inputType="textPassword"            android:lines="1"            android:textSize="14sp" />    </LinearLayout>    <TextView        android:id="@+id/btn_modify_pwd"        style="@style/ViewButton"        android:layout_marginTop="40dp"        android:text="确认" /></LinearLayout>