<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorWhite"    android:orientation="vertical">    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer        android:id="@+id/gsy_item_video_info_content"        android:layout_width="match_parent"        android:layout_height="200dp" />    <TextView        android:id="@+id/tv_item_video_info_content_1"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:padding="10dp"        android:textColor="#323232"        android:textSize="16sp" />    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal"        android:padding="10dp">        <LinearLayout            android:id="@+id/ll_item_video_info_content_1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="horizontal">            <com.mzth.createcause.base.custom.RadiusUserImageView                android:id="@+id/iv_item_video_info_content_1"                android:layout_width="30dp"                android:layout_height="30dp"                android:scaleType="fitXY" />            <TextView                android:id="@+id/tv_item_video_info_content_2"                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:gravity="center_vertical"                android:paddingLeft="10dp"                android:textColor="#7a7a7a" />        </LinearLayout>        <TextView            android:id="@+id/tv_item_video_info_content_3"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:gravity="center_vertical"            android:paddingLeft="20dp"            android:textColor="#bdbdbd"            android:textSize="12sp" />    </LinearLayout></LinearLayout>