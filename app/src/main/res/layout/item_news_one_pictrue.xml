<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorWhite"    android:orientation="horizontal"   android:padding="10dp">    <LinearLayout        android:layout_width="0dp"        android:layout_height="match_parent"        android:layout_weight="1"        android:orientation="vertical"        android:paddingRight="10dp">        <TextView            android:id="@+id/tv_news_content_1"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:ellipsize="end"            android:gravity="center_vertical"            android:lineSpacingExtra="3dp"            android:maxLines="2"            android:textColor="@color/colorMaxText"            android:textSize="@dimen/SizeNewsContent"            android:typeface="monospace" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1"            android:gravity="bottom"            android:orientation="horizontal">            <TextView                android:id="@+id/tv_news_content_2"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="1"                android:text="体育新闻     20评论    7分钟前"                android:textColor="@color/colorMinText"                android:textSize="@dimen/SizeNewsHint" />            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:gravity="center_vertical"                android:orientation="horizontal"                android:paddingLeft="10dp"                android:paddingRight="10dp"                android:paddingTop="10dp">                <ImageView                    android:layout_width="15dp"                    android:layout_height="15dp"                    android:background="@drawable/news_del_icon" />            </LinearLayout>        </LinearLayout>    </LinearLayout>    <ImageView        android:id="@+id/iv_news_content_2"        android:layout_width="120dp"        android:layout_height="80dp"        android:scaleType="fitXY"        android:src="@mipmap/j01" /></LinearLayout>