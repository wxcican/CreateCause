<?xml version="1.0" encoding="utf-8"?><android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/cv_release_edit_1"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="5dp"    app:cardBackgroundColor="@color/colorWhite"    app:cardCornerRadius="6dp"    app:contentPadding="-2dp">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="81dp"        android:orientation="horizontal">        <TextView            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:gravity="center_vertical"            android:paddingLeft="10dp"            android:text="上传视频:" />        <TextView            android:id="@+id/tv_item_user_release_edit_video"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center_vertical"            android:paddingLeft="10dp" />        <TextView            android:id="@+id/bt_item_user_release_edit_video"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:layout_marginBottom="25dp"            android:layout_marginRight="10dp"            android:layout_marginTop="25dp"            android:background="@drawable/resease_edit_select"            android:gravity="center_vertical"            android:paddingLeft="13dp"            android:paddingRight="13dp"            android:text="上传"            android:textColor="#919191"            android:textSize="14sp" />        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:orientation="vertical">            <LinearLayout                android:id="@+id/ll_item_user_release_video_dow"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@color/colorBackround"                android:orientation="horizontal"                android:padding="8dp">                <ImageView                    android:layout_width="15dp"                    android:layout_height="24dp"                    android:src="@drawable/article_move_icon" />            </LinearLayout>            <LinearLayout                android:id="@+id/ll_item_user_release_video_up"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="1dp"                android:background="@color/colorBackround"                android:orientation="horizontal"                android:padding="8dp">                <ImageView                    android:layout_width="15dp"                    android:layout_height="24dp"                    android:src="@drawable/up_move_icon" />            </LinearLayout>        </LinearLayout>    </LinearLayout></android.support.v7.widget.CardView>