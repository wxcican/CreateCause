<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorBackround"    android:orientation="vertical"    tools:context="com.mzth.createcause.view.fragment.user.member.MemberInfoActivity">    <View style="@style/ViewTitle" />    <include layout="@layout/base_title" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorMain"        android:gravity="center_horizontal"        android:orientation="vertical"        android:paddingBottom="20dp"        android:paddingTop="20dp">        <ImageView            android:layout_width="70dp"            android:layout_height="70dp"            android:scaleType="fitXY"            android:src="@mipmap/j02" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="10dp"            android:text="李四"            android:textColor="@color/colorWhite"            android:textSize="15sp" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal">        <TextView            android:id="@+id/tv_user_member_info_call"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:lines="1"            android:padding="10dp"            android:text="18295979862"            android:textColor="#696969"            android:textSize="16sp" />        <LinearLayout            android:id="@+id/ll_user_member_info_call"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:gravity="center_vertical"            android:orientation="horizontal"            android:paddingLeft="10dp"            android:paddingRight="10dp">            <ImageView                android:layout_width="20dp"                android:layout_height="20dp"                android:background="@drawable/call_icon" />        </LinearLayout>    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal"        android:padding="10dp">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:lines="1"            android:text="加入时间"            android:textColor="#696969"            android:textSize="14sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:lines="1"            android:text="2017-03-02"            android:textColor="#696969"            android:textSize="14sp" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <Space        android:layout_width="match_parent"        android:layout_height="10dp" />    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal"        android:padding="10dp">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:lines="1"            android:text="总业绩"            android:textColor="#696969"            android:textSize="14sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:lines="1"            android:text="1654币"            android:textColor="#696969"            android:textSize="14sp" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal"        android:padding="10dp">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:lines="1"            android:text="分享文章"            android:textColor="#696969"            android:textSize="14sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:lines="1"            android:text="14篇"            android:textColor="#696969"            android:textSize="14sp" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal"        android:padding="10dp">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:lines="1"            android:text="发布文章"            android:textColor="#696969"            android:textSize="14sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:lines="1"            android:text="1623篇"            android:textColor="#696969"            android:textSize="14sp" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" /></LinearLayout>