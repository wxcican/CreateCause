<?xml version="1.0" encoding="utf-8"?><com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorWhite"    app:contentView="@+id/content_draft_one"    app:rightMenuView="@+id/ll_right_draft_ont">    <LinearLayout        android:id="@+id/content_draft_one"        android:layout_width="match_parent"        android:layout_height="100dp"        android:orientation="horizontal">        <LinearLayout            android:id="@+id/ll_item_essay_draft_one_select"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:paddingBottom="10dp"            android:paddingLeft="10dp"            android:paddingRight="10dp"            android:paddingTop="13dp">            <ImageView                android:id="@+id/iv_item_essay_draft_one_select"                android:layout_width="15dp"                android:layout_height="15dp"                android:background="@drawable/essay_message_iv" />        </LinearLayout>        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:orientation="vertical">            <TextView                android:id="@+id/tv_item_user_fraft_1"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="10dp"                android:ellipsize="end"                android:gravity="center_vertical"                android:lineSpacingExtra="3dp"                android:lines="2"                android:textColor="@color/colorMaxText"                android:textSize="@dimen/SizeNewsContent"                android:typeface="monospace" />            <TextView                android:id="@+id/tv_item_user_fraft_2"                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_marginBottom="10dp"                android:layout_weight="1"                android:gravity="bottom"                android:textColor="@color/colorMinText"                android:textSize="@dimen/SizeNewsHint" />        </LinearLayout>        <ImageView            android:id="@+id/iv_item_user_fraft_1"            android:layout_width="120dp"            android:layout_height="80dp"            android:layout_marginBottom="10dp"            android:layout_marginRight="10dp"            android:layout_marginTop="10dp" />    </LinearLayout>    <LinearLayout        android:id="@+id/ll_right_draft_ont"        android:layout_width="wrap_content"        android:layout_height="100dp"        android:background="@color/colorMain"        android:orientation="vertical">        <TextView            android:id="@+id/tv_item_draft_1"            android:visibility="gone"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1"            android:gravity="center_vertical"            android:paddingLeft="15dp"            android:paddingRight="15dp"            android:text="编辑"            android:textColor="@color/colorWhite"            android:textSize="16sp" />        <TextView            android:id="@+id/tv_item_draft_2"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_margin="1dp"            android:layout_weight="1"            android:background="@color/colorWhite"            android:gravity="center_vertical"            android:paddingLeft="15dp"            android:paddingRight="15dp"            android:text="上线"            android:textColor="@color/colorMain"            android:textSize="16sp" />    </LinearLayout></com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>