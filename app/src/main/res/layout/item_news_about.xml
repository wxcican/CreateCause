<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorWhite"    android:orientation="vertical">    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:id="@+id/ll_item_news_info_about"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:padding="10dp">        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:orientation="vertical"            android:paddingRight="10dp">            <TextView                android:id="@+id/tv_item_news_info_1"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:ellipsize="end"                android:gravity="center_vertical"                android:lineSpacingExtra="3dp"                android:lines="2"                android:text="2010年9月16日 - 里面各个目录貌似没看见有Kconfig啊。除了kernel里面会有一个的文件,其他地方也没有发现,楼主再确认一下人家说得对不对 回复于: 201"                android:textColor="@color/colorMaxText"                android:textSize="@dimen/SizeNewsContent"                android:typeface="monospace" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:gravity="bottom"                android:orientation="horizontal">                <TextView                    android:id="@+id/tv_item_news_info_2"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:text="体育新闻     20评论    7分钟前"                    android:textColor="@color/colorMinText"                    android:textSize="@dimen/SizeNewsHint" />                <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:gravity="center_vertical"                    android:orientation="horizontal"                    android:paddingLeft="10dp"                    android:paddingRight="10dp"                    android:paddingTop="10dp">                    <ImageView                        android:layout_width="15dp"                        android:layout_height="15dp"                        android:background="@drawable/news_del_icon" />                </LinearLayout>            </LinearLayout>        </LinearLayout>        <ImageView            android:id="@+id/iv_item_news_info_1"            android:layout_width="120dp"            android:layout_height="80dp"            android:scaleType="fitXY"            android:src="@mipmap/j01" />    </LinearLayout></LinearLayout>