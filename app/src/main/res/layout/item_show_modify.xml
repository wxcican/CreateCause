<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">        <TextView            android:id="@+id/tv_info_show_1"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@drawable/show_title"            android:gravity="center_horizontal"            android:paddingBottom="10dp"            android:paddingTop="10dp"            android:text="昵称修改"            android:textColor="@color/colorWhite"            android:textSize="16sp" />        <TextView            android:id="@+id/tv_info_show_2"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@color/colorBackround"            android:paddingBottom="5dp"            android:paddingLeft="8dp"            android:paddingTop="5dp"            android:text="温馨提示: 您正在修改您的昵称"            android:textSize="13sp" />        <View style="@style/ViewDivHorizontal" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@color/colorWhite"            android:orientation="horizontal">            <TextView                android:id="@+id/tv_info_show_3"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:padding="8dp"                android:text="姓名:"                android:textColor="@color/colorHandler"                android:textSize="15sp" />            <EditText                android:id="@+id/et_info_show_1"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:background="@null"                android:hint="请输入您的名字"                android:lines="1"                android:textSize="14sp" />        </LinearLayout>        <View style="@style/ViewDivHorizontal" />        <View            android:layout_width="match_parent"            android:layout_height="10dp"            android:background="@color/colorBackround" />        <View style="@style/ViewDivHorizontal" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">            <TextView                android:id="@+id/bt_info_show_1"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="1"                android:background="@drawable/show_bt_left"                android:gravity="center"                android:paddingBottom="10dp"                android:paddingTop="10dp"                android:text="取消" />            <View style="@style/ViewDivVertical" />            <TextView                android:id="@+id/bt_info_show_2"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="1"                android:background="@drawable/show_bt_right"                android:gravity="center"                android:paddingBottom="10dp"                android:paddingTop="10dp"                android:text="确定" />        </LinearLayout>    </LinearLayout></LinearLayout>