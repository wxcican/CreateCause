<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorWhite"    android:orientation="vertical"    android:padding="10dp">    <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="10dp"        android:ellipsize="end"        android:lines="1"        android:gravity="center_vertical"        android:text="这里的都是视频模块"        android:textColor="@color/colorHint"        android:textSize="@dimen/SizeNewsTitle" />    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer        android:id="@+id/gsy_search_result"        android:layout_width="match_parent"        android:layout_height="200dp" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:paddingTop="10dp">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="新闻   2000条评论"            android:textColor="@color/colorMinText"            android:textSize="@dimen/SizeNewsHint" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="15分钟前"            android:textColor="@color/colorMinText"            android:textSize="@dimen/SizeNewsHint" />    </LinearLayout></LinearLayout>