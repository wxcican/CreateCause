<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorBackround"    tools:context="com.mzth.createcause.view.fragment.user.eaaaymessage.EssayDraftActivity">    <LinearLayout        android:id="@+id/ll_essay_draft_btn"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:background="@color/colorWhite"        android:orientation="horizontal">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal">            <LinearLayout                android:id="@+id/ll_user_essay_draft"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="horizontal">                <ImageView                    android:id="@+id/iv_user_essay_draft"                    android:layout_width="15dp"                    android:layout_height="15dp"                    android:layout_gravity="center_vertical"                    android:layout_marginBottom="15dp"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="15dp"                    android:background="@drawable/essay_message_iv" />                <TextView                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:layout_marginLeft="5dp"                    android:gravity="center_vertical"                    android:paddingRight="5dp"                    android:text="全选"                    android:textColor="#777777"                    android:textSize="16sp" />            </LinearLayout>            <TextView                android:id="@+id/tv_user_essay_draft_1"                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:gravity="center_vertical"                android:paddingLeft="10dp"                android:paddingRight="10dp"                android:text="删除"                android:textColor="#777777"                android:textSize="16sp" />            <Space                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1" />            <TextView                android:id="@+id/tv_user_essay_draft_2"                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:background="@color/colorMain"                android:gravity="center_vertical"                android:paddingLeft="25dp"                android:paddingRight="25dp"                android:text="发布"                android:textColor="@color/colorWhite"                android:textSize="16sp" />        </LinearLayout>        <TextView            android:layout_width="wrap_content"            android:layout_height="match_parent" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_above="@id/ll_essay_draft_btn"        android:orientation="vertical">        <View style="@style/ViewTitle" />        <include layout="@layout/base_title" />        <android.support.v4.widget.SwipeRefreshLayout            android:id="@+id/srl_user_essay_draft"            android:layout_width="match_parent"            android:layout_height="match_parent">        <android.support.v7.widget.RecyclerView            android:id="@+id/rv_user_essay_draft"            android:layout_width="match_parent"            android:layout_height="match_parent" />    </android.support.v4.widget.SwipeRefreshLayout></LinearLayout>    </RelativeLayout>