<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorWhite"    android:orientation="vertical">    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:paddingLeft="10dp"        android:paddingTop="10dp"        android:paddingRight="10dp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <com.mzth.createcause.base.custom.RadiusUserImageView            android:id="@+id/iv_item_item_news_info_comment_1"            android:layout_width="40dp"            android:layout_height="40dp" />        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:orientation="vertical"            android:paddingLeft="5dp">            <TextView                android:id="@+id/tv_item_item_news_info_comment_1"                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:gravity="center_vertical"                android:textColor="#6a6a6a"                android:textSize="14sp" />            <TextView                android:id="@+id/tv_item_item_news_info_comment_2"                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:gravity="center_vertical"                android:textColor="#6a6a6a"                android:textSize="12sp" />        </LinearLayout>        <LinearLayout            android:id="@+id/ll_item_item_news_info_good"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:gravity="center_vertical"            android:orientation="horizontal"            android:paddingLeft="10dp"            android:paddingRight="10dp">            <ImageView                android:id="@+id/iv_item_item_news_info_comment_2"                android:layout_width="20dp"                android:layout_height="20dp"                android:src="@drawable/icon_praise" />            <TextView                android:id="@+id/tv_item_item_news_info_comment_3"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingLeft="5dp"                android:textColor="#b6b6b6"                android:textSize="13sp" />        </LinearLayout>        <LinearLayout            android:id="@+id/ll_item_item_news_info_comment"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:gravity="center_vertical"            android:orientation="horizontal"            android:paddingLeft="10dp"            android:paddingRight="10dp">            <ImageView                android:layout_width="20dp"                android:layout_height="20dp"                android:src="@drawable/icon_news" />        </LinearLayout>    </LinearLayout>    <TextView        android:id="@+id/tv_item_item_news_info_comment_4"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:lineSpacingExtra="3dp"        android:paddingBottom="10dp"        android:paddingLeft="55dp"        android:paddingTop="10dp"        android:textColor="#393939"        android:textSize="15sp"        android:typeface="monospace" /></LinearLayout>