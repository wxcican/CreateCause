<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorBackround"    android:orientation="vertical">    <View style="@style/ViewDivHorizontal" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorWhite"        android:orientation="horizontal"        android:padding="10dp">        <TextView            android:id="@+id/et_item_news_info_et_et"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:background="@drawable/news_info_et"            android:hint="我也说两句"            android:paddingBottom="10dp"            android:paddingLeft="15dp"            android:paddingTop="10dp"            android:textSize="14sp" />        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:orientation="horizontal">            <LinearLayout                android:id="@+id/ll_item_news_info_et_more"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:gravity="center"                android:orientation="horizontal">                <ImageView                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_marginLeft="5dp"                    android:layout_marginRight="5dp"                    android:background="@drawable/tab_comment_icon" />            </LinearLayout>            <LinearLayout                android:id="@+id/ll_item_news_info_et_collect"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:gravity="center"                android:orientation="horizontal">                <ImageView                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_marginLeft="5dp"                    android:layout_marginRight="5dp"                    android:background="@drawable/tab_colle_icon" />            </LinearLayout>            <LinearLayout                android:id="@+id/ll_item_news_info_et_share"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:gravity="center"                android:orientation="horizontal">                <ImageView                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_marginLeft="5dp"                    android:layout_marginRight="5dp"                    android:background="@drawable/tab_share_icon" />            </LinearLayout>        </LinearLayout>    </LinearLayout></LinearLayout>