<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorWhite"    android:orientation="vertical"    android:paddingBottom="13dp"    android:paddingLeft="10dp"    android:paddingRight="10dp"    android:paddingTop="13dp">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal">        <ImageView            android:id="@+id/iv_account_1"            android:layout_width="40dp"            android:layout_height="40dp" />        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:orientation="vertical"            android:paddingLeft="10dp">            <TextView                android:id="@+id/tv_account_1"                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:gravity="center_vertical"                android:text="* * *"                android:textColor="#383838"                android:textSize="14sp" />            <TextView                android:id="@+id/tv_account_2"                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:gravity="center_vertical"                android:textColor="@color/colorBody"                android:textSize="12sp" />        </LinearLayout>        <ImageView            android:id="@+id/tv_item_exterat"            android:layout_gravity="center_vertical"            android:layout_width="20dp"            android:layout_height="20dp" />    </LinearLayout></LinearLayout>