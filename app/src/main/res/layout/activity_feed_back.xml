<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorBackround"    android:orientation="vertical"    tools:context="com.mzth.createcause.view.fragment.user.set.FeedBackActivity">    <View style="@style/ViewTitle" />    <include layout="@layout/base_title" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1"        android:orientation="vertical">        <EditText            android:id="@+id/et_feed_back"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="#FFFFFF"            android:gravity="top"            android:hint="请描述您的问题"            android:lineSpacingExtra="3dp"            android:lines="6"            android:padding="10dp"            android:textSize="15sp" />        <View style="@style/ViewDivHorizontal" />        <Space            android:layout_width="match_parent"            android:layout_height="10dp" />        <View style="@style/ViewDivHorizontal" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@color/colorWhite"            android:orientation="vertical">            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:padding="10dp"                android:text="您也可截图把出现的BUG问题发送给我们"                android:textColor="#aaaaaa"                android:textSize="15sp" />            <android.support.v7.widget.RecyclerView                android:id="@+id/rv_user_set_feed_back"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:padding="8dp" />        </LinearLayout>    </LinearLayout>    <TextView        android:id="@+id/btn_feed"        android:layout_marginBottom="10dp"        style="@style/ViewButton"        android:layout_marginTop="10dp"        android:text="提交" /></LinearLayout>