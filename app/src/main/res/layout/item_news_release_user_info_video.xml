<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/colorWhite"    android:orientation="vertical">    <View style="@style/ViewDivHorizontal" />    <TextView        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingBottom="5dp"        android:paddingTop="5dp"        android:text="视频视频视频视频视频视频视频视频视频视频视频视频视频视频视频视频"        android:textColor="#1b1b1b"        android:textSize="16sp" />    <RelativeLayout        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:layout_width="match_parent"        android:layout_height="200dp">        <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer            android:id="@+id/gsy_search_result"            android:layout_width="match_parent"            android:layout_height="200dp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentBottom="true"            android:layout_margin="5dp"            android:background="@drawable/release_user_info_video"            android:paddingBottom="1dp"            android:paddingLeft="5dp"            android:paddingRight="5dp"            android:paddingTop="1dp"            android:text="15:00"            android:textColor="@color/colorWhite"            android:textSize="12sp" />    </RelativeLayout>    <LinearLayout        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:paddingBottom="10dp"        android:paddingTop="10dp">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="201评论"            android:textColor="#afafaf"            android:textSize="14sp" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="7分钟前"            android:textColor="#afafaf"            android:textSize="14sp" />    </LinearLayout>    <View style="@style/ViewDivHorizontal" />    <View        android:layout_width="match_parent"        android:layout_height="5dp"        android:background="@color/colorBackround" /></LinearLayout>