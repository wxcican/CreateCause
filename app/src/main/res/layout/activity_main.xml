<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context="com.mzth.createcause.view.MainActivity">    <LinearLayout        android:layout_alignParentBottom="true"        android:id="@+id/main_bottom"        android:layout_width="match_parent"        android:layout_height="50dp"        android:background="@color/colorWhite"        android:orientation="horizontal">        <LinearLayout            android:id="@+id/ll_main_1"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:orientation="vertical">            <ImageView                android:id="@+id/iv_main_1"                android:layout_width="25dp"                android:layout_height="25dp"                android:background="@drawable/homepage_icon" />            <TextView                android:id="@+id/tv_main_1"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="首页"                android:textSize="14sp" />        </LinearLayout>        <LinearLayout            android:id="@+id/ll_main_2"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:orientation="vertical">            <ImageView                android:id="@+id/iv_main_2"                android:layout_width="25dp"                android:layout_height="25dp"                android:background="@drawable/news_icon" />            <TextView                android:id="@+id/tv_main_2"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="资讯"                android:textSize="14sp" />        </LinearLayout>        <LinearLayout            android:id="@+id/ll_main_3"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:orientation="vertical">            <ImageView                android:id="@+id/iv_main_3"                android:layout_width="25dp"                android:layout_height="25dp"                android:background="@drawable/video_icon" />            <TextView                android:id="@+id/tv_main_3"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="视频"                android:textSize="14sp" />        </LinearLayout>        <LinearLayout            android:id="@+id/ll_main_4"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:orientation="vertical">            <ImageView                android:id="@+id/iv_main_4"                android:layout_width="25dp"                android:layout_height="25dp"                android:background="@drawable/user_icon" />            <TextView                android:id="@+id/tv_main_4"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="我的"                android:textSize="14sp" />        </LinearLayout>    </LinearLayout>    <View        android:layout_above="@id/main_bottom"        android:id="@+id/div"        style="@style/ViewDivHorizontal" />    <FrameLayout        android:layout_above="@id/div"        android:id="@+id/fl_main"        android:layout_width="match_parent"        android:layout_height="match_parent" /></RelativeLayout>