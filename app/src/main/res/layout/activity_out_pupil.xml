<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorBackround"    android:orientation="vertical"    tools:context="com.mzth.createcause.view.fragment.user.outpupil.OutPupilActivity">    <View style="@style/ViewTitle" />    <include layout="@layout/base_title" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="10dp"        android:background="@drawable/user_set"        android:orientation="horizontal">        <LinearLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:background="@drawable/pupil_search"            android:orientation="horizontal">            <ImageView                android:layout_width="25dp"                android:layout_height="25dp"                android:layout_margin="7dp"                android:background="@drawable/search_icon_gray" />            <EditText                android:id="@+id/et_out_pupli_content_1"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1"                android:background="@null"                android:hint="姓名/手机号"                android:lines="1"                android:textSize="15sp" />        </LinearLayout>        <TextView            android:id="@+id/tv_out_pupli_content_1"            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:gravity="center_vertical"            android:paddingLeft="13dp"            android:paddingRight="13dp"            android:text="搜索"            android:textColor="@color/colorWhite"            android:textSize="15sp" />    </LinearLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="horizontal">            <android.support.v7.widget.RecyclerView                android:id="@+id/rv_out_pupli_content"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="1" />            <android.support.v7.widget.RecyclerView                android:id="@+id/rv_out_pupli_title"                android:layout_width="25dp"                android:layout_height="match_parent"                android:layout_marginBottom="20dp"                android:layout_marginTop="20dp" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:gravity="center"            android:orientation="horizontal">            <TextView                android:id="@+id/tv_out_pupli_content_hint"                android:layout_width="60dp"                android:layout_height="60dp"                android:background="@drawable/user_set"                android:gravity="center"                android:text="A"                android:textColor="@color/colorWhite"                android:textSize="30sp"                android:visibility="invisible" />        </LinearLayout>    </RelativeLayout></LinearLayout>